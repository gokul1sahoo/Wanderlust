<% layout('./layouts/boilerplate') %>
<div class="row">
    <div class="col-8 offset-2">
       <h3> Create a New Listing</h3>
  
          <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
               <div class="mb-3">
               <label for="title" class="form-label">Title </label>
               <input name ="listing[title]" type="text" class="form-control" placeholder=" Add a  catchy Title" required>
                 <div class="valid-feedback">
                   Looks good!
                </div>
                <div class="invalid-feedback">
                   please enter valid title!
               </div>
              </div>

              <div class="mb-3">
              <label for="description" class="form-label">Description </label>
              <textarea name="listing[description]" type="text" class="form-control" placeholder=" Enter Description" required></textarea>
              <div class="invalid-feedback">
                   please enter a short description!
               </div>
              </div>

             <div class="mb-3">
             <label for="image" class="form-label"> Upload Listing Image </label>
               <input  type="file"   name="listing[image]" class="form-control" >
             </div>

           <div class="row">
             <div class="mb-3 col-md-4">
             <label for="price" class="form-label">Price </label>
             <input name="listing[price]"  class="form-control" placeholder=" 1200" required>
             <div class="invalid-feedback">
                   price cann't be empty!
               </div>
             </div>

              <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country </label>
               <input name="listing[country]" type="text" class="form-control" placeholder=" India" required>
               <div class="invalid-feedback">
                   country name should  be valid!
               </div>
              </div>
            </div>

             <div class="mb-3">
             <label for="location" class="form-label">Location </label>
             <input name="listing[location]" type="text" class="form-control" placeholder=" Kolkata,Mumbai,Delhi etc " required>
             <div class="invalid-feedback">
                   location should  be valid!
               </div>
            </div>

              <br><br>
            <button class="btn btn-dark"> Add</button>
       </form>
    </div>
</div>