<% layout('./layouts/boilerplate') %>
<div class="row mt-3">
  <h3 class="col-12 col-md-6 offset-md-3 col-lg-6 offset-lg-3 text-center"> Sign up on Wanderlust</h3>
  <div class="col-12 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
    <form action="/signup" method="POST" novalidate class="needs-validation" >
      <div class="mb-3">
               <label for="username" class="form-label mt-3">Username </label>
               <input
                name ="username" 
                type="text"
                id ="username" 
                class="form-control" 
                placeholder=" Add a  catchy Title" 
                required>
                 <div class="valid-feedback">
                   Looks good!
                </div>
              </div>
              <div class="mb-3">
               <label for="email" class="form-label mt-1">Email </label>
               <input
                name ="email" 
                type="email"
                id ="email" 
                class="form-control" 
                placeholder=" Add a  catchy Title"
                 required>
              </div>
              <div class="mb-3">
               <label for="password" class="form-label mt-1">password </label>
               <input
                name ="password" 
                type="password"
                id ="password" 
                class="form-control" 
                placeholder=" Add a  catchy Title" required>
              </div>
              <button class="btn btn-success">Sign Up</button>
    </form>

  </div>
 </div>
    